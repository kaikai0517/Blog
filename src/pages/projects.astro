---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title = "Projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">VUE</div>
  </div>

  <HorizontalCard
    title="Modern Office"
    img="/ModernOffice.webp"
    desc="The application allows remote teams to collaborate in real-time, with features such as video conferencing, text chat."
    url="https://modern-office.vercel.app/"
    badge="NEW"
    tags={['VUE','Tailwind','Socket','WebRTC','Canva','TiledMap']}
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Bar Map"
    img="/BarMap.webp"
    desc="The application allows users to search for bars in a specific area and view information such as the address, phone number, and ratings. It also has the feature of showing the bars on the Google Map, users can also get the direction to the bar from their current location."
    url="https://map-black.vercel.app/"
    tags={['VUE','Tailwind','Google Map Api','Github Api']}
  />

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">React</div>
  </div>
  <HorizontalCard
  title="Stack Overflow Search List"
  img="/SearchList.webp"
  desc="The application allows users to search for programming-related questions and answers on Stack Overflow and view the results in a user-friendly interface."
  url="https://stack-overflow-search-list.vercel.app/"
  tags={['React','Redux','Tailwind','Stack Overflow Api','Infinite Scroll','Lazy Load']}
  />

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Astro</div>
  </div>
  <HorizontalCard
    title="Kaster Blog"
    img="/KasterBlog.webp"
    desc="The platform is designed to be fully responsive and adaptable to any device, using RWD(Responsive Web Design) techniques. It allows users to read articles, view my portfolio and CV in an easy and user-friendly way."
    url="https://kaster-blog.vercel.app/"
    tags={['Astro','Tailwind']}
  />
</BaseLayout>

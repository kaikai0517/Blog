---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";

const posts = (await Astro.glob("./blog/*.{md,mdx}")).sort(
  (a, b) =>
    new Date(b.frontmatter.pubDate).valueOf() -
    new Date(a.frontmatter.pubDate).valueOf()
);

const last_posts = posts.slice(0, 3);
---

<BaseLayout>
  <div class="pb-12 mt-5">
    <div class="text-xl py-1">Hey there ðŸ‘‹</div>
    <div class="text-5xl font-bold">I'm Kaster</div>
    <div class="text-3xl py-3 font-bold">Front-End Engineer</div>
    <div class="py-2">
      <text class="text-lg">
        I have experience working with a variety of front-end technologies and have a strong understanding of web development best practices.<br>
        I am continuously learning new technologies and techniques to stay up to date with the latest trends in the industry.<br>
        I would love the opportunity to work on challenging projects and help bring ideas to life.<br>
        In my free time, I enjoy experimenting with new technologies and building personal projects to improve my skills.<br>
      </text>
    </div>
    <div class="mt-8">
      <a class="btn" href="mailto:cvb8881764@gmail.com" target="_blank">
        Contact Me!</a
      >
    </div>
  </div>

  <div>
    <div class="text-3xl w-full font-bold mb-2">My last projects {"</>"}</div>
  </div>
  <HorizontalCard
  title="Modern Office"
  img="/ModernOffice.webp"
  desc="The application allows remote teams to collaborate in real-time, with features such as video conferencing, text chat."
  url="https://modern-office.vercel.app/"
  badge="NEW"
  tags={['VUE','Tailwind','Socket','WebRTC','Canva','TiledMap']}
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Kaster Blog"
    img="/KasterBlog.webp"
    desc="The platform is designed to be fully responsive and adaptable to any device, using RWD(Responsive Web Design) techniques. It allows users to read articles, view my portfolio and CV in an easy and user-friendly way."
    url="https://kaster-blog.vercel.app/"
    tags={['Astro','Tailwind']}
  />
  <div class="divider my-0"></div>
  <HorizontalCard
  title="Stack Overflow Search List"
  img="/SearchList.webp"
  desc="The application allows users to search for programming-related questions and answers on Stack Overflow and view the results in a user-friendly interface."
  url="https://stack-overflow-search-list.vercel.app/"
  tags={['React','Redux','Tailwind','Stack Overflow Api','Infinite Scroll','Lazy Load']}
  />

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Latest from blog</div>
  </div>

  {
    last_posts.map((post) => (
      <>
        <HorizontalCard
          title={post.frontmatter.title}
          img={post.frontmatter.heroImage}
          desc={post.frontmatter.description}
          url={post.url}
          target="_self"
        />
        <div class="divider my-0" />
      </>
    ))
  }
</BaseLayout>
